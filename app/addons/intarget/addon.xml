<?xml version="1.0"?>
<addon scheme="3.0">
    <id>intarget</id>
    <version>1.0</version>
    <priority>10</priority>
    <position>0</position>
    <status>active</status>
    <default_language>ru</default_language>
    <auto_install>MULTIVENDOR,ULTIMATE</auto_install>
    <compatibility>
        <conflicts></conflicts>
    </compatibility>
    <settings>
        <sections>
            <section id="general">
                <items>
                    <item id="intarget_desc">
                        <type>info</type>
                        <handler>fn_intarget_decs</handler>
                    </item>
                    <item id="connect">
                        <type>template</type>
                        <default_value>connect.tpl</default_value>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
    <language_variables>
        <item lang="ru" id="intarget_connect_notification"><![CDATA[В настоящий момент <a href="[addon_link]">модуль inTarget</a> не подключён. Настройте этот модуль, указав ваш Email и Ключ API с сайта <a href="https://intarget.ru" target="_blank">inTarget</a> в настройках модуля."]]></item>
    </language_variables>
    <queries>
        <item for="install">
            CREATE TABLE `?:intarget` (
            `project_id` int(11) unsigned NOT NULL,
            `email` varchar(20),
            `key` varchar(40),
            PRIMARY KEY (`project_id`)
            ) Engine=MyISAM DEFAULT CHARSET UTF8;
        </item>
        <item for="uninstall">DROP TABLE IF EXISTS ?:intarget;</item>
    </queries>
</addon>